<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>
    <Runtime>
    </Runtime>

    <Extension path = "/MonoDevelop/Ide/StartupHandlers">
        <Class class = "EditorConfig.Addin.StartupHandler"/>
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/Commands/Edit">
        <Command id = "EditorConfig.Addin.Commands.LoadSettings"
                 _label = "Reload Editor Settings for Current File"
                 _description = "Update text editor settings, which normally happens on file open."
                 defaultHandler = "EditorConfig.Addin.LoadSettingsHandler" />
        
        <Command id = "EditorConfig.Addin.Commands.Apply"
                 _label = "Apply Changes to Current File"
                 _description = "Change the current file now, which normally happens on file save."
                 defaultHandler = "EditorConfig.Addin.ApplyHandler" />

        <Command id = "EditorConfig.Addin.Commands.ToggleApplyEol"
                 _label = "Let EOL Settings Change Files"
                 _description = "Let the end_of_line feature change files instead of just changing IDE settings."
                 defaultHandler = "EditorConfig.Addin.ToggleApplyEolHandler" />
    </Extension>
    
    <Extension path = "/MonoDevelop/Ide/MainMenu/Edit">
        <SeparatorItem id = "CutSeparator" />
        <ItemSet id = "EditorConfig" _label = "EditorConfig">
            <CommandItem id = "EditorConfig.Addin.Commands.LoadSettings" />
            <CommandItem id = "EditorConfig.Addin.Commands.Apply" />
            <CommandItem id = "EditorConfig.Addin.Commands.ToggleApplyEol" />>
        </ItemSet>
    </Extension>
</ExtensionModel>
